{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "productInfo": {
      "type": "component",
      "repeatable": false,
      "component": "item.product-size"
    },
    "notice": {
      "type": "richtext"
    },
    "productImages": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "products": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product.product"
    },
    "slug": {
      "type": "string",
      "required": false,
      "unique": true
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "productDescription": {
      "type": "dynamiczone",
      "components": [
        "item.title-description-item"
      ],
      "required": true
    }
  }
}
